@using Advieskeuze.Data.Domain.ViewModel.Banner
@using SharedCode
@model BannerModelLocatie

@{
  Layout = "~/Views/Shared/_Banner.cshtml";
  var cdn = GewrapteSettings.CDNUrl;
  var pagina = AdvieskeuzeRoutes.ToAbsoluteUrl(AdvieskeuzeRoutes.ShowLocatie(Model.KantoorLink));
  var width = Model.BannerSettings.PropertyContainer.HuidigeAfmeting.Width;
  var height = Model.BannerSettings.PropertyContainer.HuidigeAfmeting.Height;
  var titel = "Bekijk het profiel van " + Model.Kantoor.Naam + " op Advieskeuze.nl";
}

@if (Model.BannerSettings.VoorbeeldModus) {
  pagina = AdvieskeuzeRoutes.ToAbsoluteUrl(AdvieskeuzeRoutes.Home());
<div id="banner-no-access">Let op! Ongeldig</div>
}

<a href="@pagina" target="_blank"><img src="@cdn/content/advieskeuze/images/banners/banner-kantoor-@(width)-x-@(height).png" width="@width" height="@height" alt="@titel" title="@titel" /></a>