@using Advieskeuze.Data.Domain.ViewModel.Banner
@model BannerModelLocatie

@{
  Layout = "~/Views/Shared/_Banner.cshtml";
  var kantoorprofiel = AdvieskeuzeRoutes.ToAbsoluteUrl(AdvieskeuzeRoutes.ShowLocatie(Model.KantoorLink));
}

@if (Model.BannerSettings.VoorbeeldModus) {
<div id="banner-no-access">Let op! Ongeldig</div>
}
<a href="@kantoorprofiel" target="_blank">Bekijk het profiel van @Model.Kantoor.Naam op Advieskeuze.nl</a>