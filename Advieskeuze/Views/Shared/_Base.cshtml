    <header class="@(CampagneActiviteitContext.Current.GetActieveBranding(AdvieskeuzeCode.DataModel.CampagneActiviteitBranding.Style_VerwijderHeaderFooter) ? "hidden" : "")" itemscope itemtype="http://schema.org/WPHeader">
