        <div class="grid nopadding">
          <div class="grid-cell100 noborder">
            @*<a href="/"><img src="@cdn/content/base/images/advieskeuze.png" width="255" title="Logo Advieskeuze.nl" alt="Logo Advieskeuze.nl" /></a>*@
